
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MobileLayout.cshtml";
}
@section css{
    <link rel="stylesheet" href="@ViewBag.V4FileServer/css/mine/agreement.css" />
    <link rel="stylesheet" href="@ViewBag.V4FileServer/css/mine/feedback-detail.css" />
}
<header class="header flex justify-content-between">
    <a href="/" class="arrow"></a>
    <span class="header-title">意见反馈</span>
    <span class=""></span>
    <span class="btn-list flex">
        <a href="" class="header-icon collection"></a>
        <a href="" class="header-icon search"></a>
        <a href="" class="header-icon share"></a>
    </span>
</header>

<h5 class="mt title">请选择您要反馈的问题类型</h5>

<section class="list">
    <ul>
        <li><a href="javascript:;">闪退/卡顿<i class="arrow"></i></a></li>
        <li><a href="javascript:;">点评和问答<i class="arrow"></i></a></li>
        <li><a href="javascript:;">学校信息与服务<i class="arrow"></i></a></li>
        <li><a href="javascript:;">账户安全<i class="arrow"></i></a></li>
        <li><a href="javascript:;">搜索筛选建议<i class="arrow"></i></a></li>
        <li><a href="javascript:;">身份认证<i class="arrow"></i></a></li>
        <li><a href="javascript:;">其它<i class="arrow"></i></a></li>
    </ul>
</section>

<section class="mt box">
    <div>
        <h5 class="title">问题类型：<span>其它</span></h5>
        <div class="textarea">
            <textarea name="" id="" cols="30" rows="10" placeholder="请输入您的反馈意见（字数1000字以内）"></textarea>
        </div>
        <h5 class="title">请上传图片（选填）</h5>
        <div class="upload-img flex">
            <ul class="img-list flex">
                <li class="upload-btn text-center">
                    <p><i class="icon"></i></p>
                    <p>上传照片</p>
                    <input type="file" name="image" accept="image/*">
                </li>
            </ul>
        </div>
    </div>
    <div>
        <p class="tips">*提交后我们将第一时间处理您的反馈并通过消息系统通知您</p>
        <div>
            <a href="javascript:;" class="submit-btn text-center">提交</a>
        </div>
    </div>
</section>
@section js{
    <script src="@ViewBag.V4FileServer/js/mine/feedback-detail.js"></script>
}

